---
import "../styles/controls.css";
---

<div id="stroke" class="strokeItems controlItemsWrapper">

    <div class="hasCheckbox enableStroke">

        <label for="enableStroke"><h3>Stroke</h3></label>

        <div class="checkboxWrapper">
            
            <input type="checkbox" id="enableStroke" />

        </div> <!-- .checkboxWrapper -->

    </div> <!-- .enableStroke -->

    <div class="strokeItemsWrapper controlItems" style="display: none;">

        <div class="controlItem strokeColor">

            <label for="strokeColor">Stroke Color</label>

            <input type="color" id="strokeColor" value="#000000" />

            <span id="strokeColorValue">#000000</span>

        </div> <!-- .strokeColor -->

        <div class="controlItem hasRange strokeWidth">

            <label for="strokeWidth">Stroke Width</label>
            
            <input type="range" id="strokeWidth" min="0.5" max="10" step="0.5" value="0"/>

            <span id="strokeWidthValue">0</span>

        </div> <!-- .strokeWidth -->

    </div> <!-- .strokeItemsWrapper -->

</div> <!-- #stroke -->